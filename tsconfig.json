{
  "compilerOptions": {
    "target": "ES2019",
    "lib": [
      "ES2020",
      "dom"
    ],
    "module": "ES6",
    "moduleResolution": "node",
    "baseUrl": ".",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}
